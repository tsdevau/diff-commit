{
  "compilerOptions": {
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "module": "CommonJS",
    "moduleResolution": "node",
    "outDir": "out",
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "ES2022",
    "types": ["node", "vscode", "jest"]
  },
  "include": ["src", "test", "./*.mjs"],
  "exclude": ["node_modules", ".vscode-test", "deprecated-tests"]
}
